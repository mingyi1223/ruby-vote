<%= flash[:notice]%>

<h1>Hi</h1>
<%= link_to 'Add', new_candidate_path %>

<table>
  <tr>
    <td></td>
    <td>Votes</td>
    <td>Name</td>
    <td>Party</td>
    <td>Age</td>
    <td>Politics</td>
    <td>Action</td>
  </tr>
  <% @candidates.each do |candidate| %>
  <tr>
    <td><%= link_to 'vote', vote_candidate_path(candidate.id), method: 'post' %></td>
    <td><%= candidate.votes %></td>
    <td><%= link_to candidate.name, candidate_path(candidate.id) %></td>
    <td><%= candidate.party %></td>
    <td><%= candidate.age %></td>
    <td><%= candidate.politics %></td>
    <td>
      <%= link_to 'update', edit_candidate_path(candidate.id) %>
      <%= link_to 'delete', candidate_path(candidate.id), method: 'delete', data: {confirm: 'are you sure?!'} %>
    </td>
  </tr>
  <% end %>
</table>
